@model MeMiXReMiX.ViewModels.AddSongViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{ 
    ViewData["Title"] = "Create A Song";
}

    <h1>MeMiX ReMiX</h1>

    <p> <h5>HOW IT WORKS:</h5></p>
    <ol>
        <li>Select an audio clip from any instrument category's dropdown menu</li>
        <li>Click 'Play' for that instrument category and you will hear your selection</li>
        <li>Selecting and playing from additional instrument categories will layer your selections together</li>
        <li>You can change your selection for any instrument category at any time. Simply use the dropdown menu again and press play</li>
        <li>Save your new tune once you have created your masterpiece</li>
    </ol>
    <table>
        <tr>
            <td>
                <p>Drums</p>
            </td>
            <td>
                <select id="drums-select" class="selectors" onchange="javascript: getMp3(0, 'drums-select');">
